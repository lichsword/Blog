                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <pubDate>Sun, 02 Jun 2013 05:04:11 +0000</pubDate>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <dc:creator><![CDATA[同人于野]]></dc:creator>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <category><![CDATA[Social Atom]]></category>

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <guid isPermaLink="false">http://www.geekonomics10000.com/?p=729</guid>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <description><![CDATA[<div style="clear:both; margin-top:5px; margin-bottom:5px;"></div><p>(《东方早报·上海书评》，2013年6月2日)</p>
